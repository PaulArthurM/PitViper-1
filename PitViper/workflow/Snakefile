import pandas as pd

# Check that the Snakemake version is up to date.
from snakemake.utils import min_version
min_version("5.24.0")

# Load the config file.
tsv = pd.read_csv(config['tsv_file'], sep="\t")

# Load the workflow rules.
include: "rules/commons.smk"
